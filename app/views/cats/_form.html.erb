<%= form_for @cat do |f| %>
  <%= render 'shared/errors', object: @cat %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image %><br>
    <%= f.hidden_field :image_cache %>
  </div>

  <% if post.image? %>
      <%= image_tag post.image.small_thumb.url %>
      <div>
        <%= label_tag :remove_image do %>
            Remove image
            <%= f.check_box :remove_image %>
        <% end %>
      </div>
  <% end %>

  <%= f.submit %>
<% end %>